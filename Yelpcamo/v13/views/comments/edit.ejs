<%- include ("../partials/header") %>


<div class="container">
    <div class="row"> 
        <div class="container" style="width: 30%; margin: 50px auto;">
            <h1 class="text-center">Edit Comment</h1>
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]" id="">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-lock">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">View All Camps</a>
        </div>
    </div>
</div>


