<%- include ("../partials/header") %>

<div class="container">
    <div class="row"> 
        <div class="container" style="width: 30%; margin: 50px auto;">
            <h1 class="text-center">Edit <%= campground.name %></h1>
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]" id="">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-lock">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">View All Camps</a>
        </div>
    </div>
</div>


<%- include ("../partials/footer") %>