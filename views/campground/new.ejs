<%- include ("../partials/header") %>

<div class="container">
    <div class="row"> 
        <div class="container" style="width: 30%; margin: 50px auto;">
            <h1 class="text-center">Create a new campgrounds</h1>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="description" id="">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-lock">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">View All Camps</a>
        </div>
    </div>
</div>


